@model TeamViewModel
@{
    ViewData["Title"] = "Team Details";
}

<h2 class="text-center p-2">Team Details</h2>

<div class="row">
    <div class="col-6 offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="images/@Model.Team.LogoImage" alt="@Model.Team.Name" />
                <h3>@Model.Team.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Conference: @Model.Team.Conference.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Division: @Model.Team.Division.Name</h4>
            </li>
            <li class="list-group-item">
                <form asp-controller="Home" asp-action="Add">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary" asp-route-activeConf="@Model.ActiveConf" asp-route-activeDiv="@Model.ActiveDiv">Return Home</a>
                    <button type="submit" class="btn btn-primary">Add to Favorites</button>
                    <input type="hidden" asp-for="Team.TeamId" />
                </form>
            </li>
        </ul>
    </div>
</div>